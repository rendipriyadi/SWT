@startuml PIC_Resolution_Flow
skinparam backgroundColor #FFFFFF
skinparam defaultFontSize 13
skinparam defaultFontName Arial

skinparam activity {
  BackgroundColor #FF9800
  BorderColor #E65100
  FontColor #FFFFFF
  FontSize 13
  FontStyle bold
}

skinparam activityDiamond {
  BackgroundColor #FFC107
  BorderColor #F57C00
  FontColor #000000
}

title PIC Flow - Resolve Safety Report

start

:PIC Receives Email
Notification;

:Click Link in Email;

:Login to System;

:View Report Details;

:Read Problem Description
& Check Photos;

:Go to Location;

:Inspect the Issue;

:Work on Solution;

:Take Solution Photos;

:Upload Photos
(Before & After);

:Write Solution Description;

:Mark Report as
"Completed";

:Submit;

:System Sends Email
to Observer;

:Report Resolved
Successfully;

stop

@enduml
