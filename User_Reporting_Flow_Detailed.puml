@startuml User_Reporting_Flow_Detailed
skinparam backgroundColor #FFFFFF
skinparam defaultFontSize 13

skinparam activity {
  BackgroundColor #2196F3
  BorderColor #1565C0
  FontColor #FFFFFF
  FontSize 13
  FontStyle bold
}

skinparam activityDiamond {
  BackgroundColor #FFC107
  BorderColor #F57C00
  FontColor #000000
  FontSize 12
}

title User Flow - Create Safety Report (Detailed)

start

:User Login to System;

:Navigate to Dashboard;

:Click "Create New Report";

:Select Problem Category;
note right
  Categories:
  • Unsafe Act
  • Unsafe Condition
  • Near Miss
  • etc.
end note

:Write Problem Description;

:Select Area/Location;

if (Have Photos?) then (Yes)
  :Upload Photos
  (Max 5 images);
else (No)
  :Continue without photos;
endif

:Set Deadline Date;

if (Know Specific PIC?) then (Yes)
  :Select PIC by Name;
else (No)
  :Select Area Only
  (All PICs in area notified);
endif

:Review Report Details;

if (All Information Correct?) then (Yes)
  :Click Submit;
  
  :System Validates Data;
  
  :Generate Encrypted ID;
  
  :Save to Database;
  
  :Send Email to PIC;
  note right
    Email includes:
    • Report details
    • Direct link
    • Deadline
  end note
  
  :Show Success Message;
  
  :Redirect to Report List;
  
  stop
  
else (No)
  :Edit Information;
  
  :Review Again;
  
  stop
endif

@enduml
