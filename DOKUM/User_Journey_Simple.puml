@startuml User_Journey_Simple
!theme plain

skinparam backgroundColor #FFFFFF
skinparam activityBackgroundColor #E3F2FD
skinparam activityBorderColor #1976D2
skinparam activityFontColor #000000
skinparam activityArrowColor #1976D2
skinparam decisionBackgroundColor #FFF9C4
skinparam decisionBorderColor #F57C00

title Safety Walk and Talk - Simple User Journey

|Observer|
start
:Login to System;
:Spot Safety Issue;
:Create New Report;
note right
  - Select Problem Category
  - Write Description
  - Choose Area/Location
  - Upload Photos (max 5)
  - Set Deadline
end note

:Assign to PIC;

|System|
:Send Email to PIC;
note right
  Subject: New Safety Report Assigned
  Content: Report details + link
  CC: Manager/Head of Area
end note

|PIC|
:Receive Email Notification;
:Login to System;
:View Report Details;

if (Can Solve Immediately?) then (Yes)
  :Work on Problem;
  :Take Solution Photos;
  :Upload Photos & Description;
  :Mark as Completed;
  
  |System|
  :Send Completion Email;
  note right
    To: Observer
    CC: Manager/Head
  end note
  
  |Observer|
  :Receive Completion Email;
  :Verify Solution;
  
  stop
  
else (No - Need Time)
  |PIC|
  :Update Status to In Progress;
  :Add Notes;
  
  |System|
  if (H-2 Before Deadline?) then (Yes)
    :Send Reminder Email;
    note right
      Subject: [Reminder H-2]
      Report Deadline Approaching
    end note
  endif
  
  if (Past Deadline?) then (Yes)
    :Send Daily Overdue Email;
    note right
      Subject: [Urgent]
      Report Overdue - Action Required
    end note
  endif
  
  |PIC|
  :Complete Work;
  :Upload Solution;
  :Mark as Completed;
  
  |System|
  :Send Completion Email;
  
  |Observer|
  :Receive Completion Email;
  :Verify Solution;
  
  stop
endif

@enduml
