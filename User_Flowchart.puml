@startuml User_Flowchart
!define RECTANGLE class

skinparam backgroundColor #FFFFFF
skinparam activity {
  BackgroundColor #E3F2FD
  BorderColor #1976D2
  FontColor #000000
  FontSize 12
  ArrowColor #1976D2
}

skinparam decision {
  BackgroundColor #FFF9C4
  BorderColor #F57C00
  FontColor #000000
}

title Safety Walk and Talk System - User Flowchart

start

:User Login to System;

if (User Role?) then (Observer)
  :Access Dashboard;
  :Create New Report;
  :Fill Report Details:
  - Problem Category
  - Description
  - Location/Area
  - Upload Photos
  - Set Deadline;
  
  :Assign to PIC;
  
  :Submit Report;
  
  :PIC Receives Email Notification;
  
  stop
  
elseif (PIC - Person in Charge) then
  :Receive Email Notification;
  
  :Access Dashboard;
  
  if (Check Report Status?) then (New/In Progress)
    :View Report Details;
    
    :Work on Problem;
    
    if (Problem Solved?) then (Yes)
      :Upload Solution Photos;
      :Add Solution Description;
      :Mark as Completed;
      
      :Observer Receives
      Completion Email;
      
      stop
      
    else (No - Need More Time)
      :Update Progress;
      :Add Notes;
      
      :Continue Working;
      
      stop
    endif
    
  elseif (Overdue) then
    :Receive Overdue
    Reminder Email (Daily);
    
    :Prioritize Work;
    
    :Complete ASAP;
    
    stop
    
  elseif (H-2 Before Deadline) then
    :Receive Deadline
    Reminder Email;
    
    :Plan to Complete;
    
    stop
  endif
  
elseif (Admin) then
  :Access Admin Panel;
  
  if (What to Manage?) then (Master Data)
    :Manage:
    - Areas
    - Departments
    - Problem Categories
    - PICs;
    
    stop
    
  elseif (Reports) then
    :View All Reports;
    
    :Filter by:
    - Status
    - Area
    - Date Range
    - PIC;
    
    :Export to PDF/Excel;
    
    stop
    
  elseif (History) then
    :View Completed Reports;
    
    :Generate Reports;
    
    :Download PDF;
    
    stop
  endif
  
elseif (Manager/Head) then
  :Receive CC Email
  for Reports in Area;
  
  :Monitor Team Progress;
  
  :View Dashboard;
  
  if (Need to Intervene?) then (Yes)
    :Contact PIC;
    :Provide Support;
    
    stop
    
  else (No)
    :Continue Monitoring;
    
    stop
  endif
endif

@enduml
